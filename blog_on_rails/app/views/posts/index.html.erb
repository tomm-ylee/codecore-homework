<div class="row">
  <% @posts.each do |post| %>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="card container">
        <div class="post-title">
          <h4><%= post.title %></h4>
        </div>
        <div class="post-body"
          <p><%= post.body %></p>
        </div>
        <%= link_to "#{post.comments.count} comment#{'s' if post.comments.count > 1}", post_path(post.id), class: "comments-link" %>
      </div>
    </div>
  <% end %>
</div>
